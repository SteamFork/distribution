#!/bin/bash

if [[ $EUID -ne 0 ]]; then
    exec pkexec --disable-internal-agent "$0" "$@"
fi

function show_help() {
    cat <<EOF
SteamFork Installer

Options:
  --drive            ...  Specify the disk for installation.
  --username         ...  Non-root user to create during installation.
  --password         ...  The password to configure for the non-root user account.
  --root_password    ...  The password to configure for the root account.
  --use_unallocated  ...  Use unallocated space on target disk instead of the full disk. (25GB minimum required)

Ex.
  steamfork-installer --drive sda --username deck --password deck --root_password deck

EOF
}

function log_progress() {
    local percentage=$1
    local message=$2
    echo "${percentage}%: ${message}"
}

function run_command() {
    local cmd=$1
    local percentage=$2
    local message=$3

    log_progress "${percentage}" "${message}"
    eval "${cmd}"
    local exit_code=$?
    if [[ $exit_code -ne 0 ]]; then
        log_progress "${percentage}" "Error ${exit_code} at step: ${message}. Installation Failed..."
        exit 1
    fi
}

if [ ! "$#" -gt 0 ]; then
    show_help
    exit 1
fi

while [[ $# -gt 0 ]]; do
    key="$1"
    case $key in
        --drive)
        DEVICE="$2"
        shift # past argument
        shift # past value
        ;;
        --username)
        OSUSER="$2"
        shift # past argument
        shift # past value
        ;;
        --password)
        OSPASS="$2"
        shift # past argument
        shift # past value
        ;;
        --root_password)
        ROOTPASS="$2"
        shift # past argument
        shift # past value
        ;;
        --use_unallocated)
        USE_UNALLOCATED=true
        shift # past argument
        ;;
        *)    # unknown option
        echo -e "Unknown option: $1\n"
        show_help
        exit 1
        ;;
    esac
done

ROOTLOCATION=/tmp/sf_root
INSTALLLOCATION=${ROOTLOCATION}/rootfs
HOMELOCATION_TEMP=/tmp/sf_home
SNAPSHOT_FUTURELOC=${HOMELOCATION_TEMP}/.steamos/installcontainer
SUBVOL=$(ls /etc/install.image/*.img.zst | sed -s 's/.img.zst//g')
SUBVOL=$(basename ${SUBVOL})
SUBVOLLOCATION=/tmp/subvol

echo ${DEVICE} | grep '^/dev' >/dev/null || DEVICE="/dev/${DEVICE}"

INSTALLDEVICE="${DEVICE}"

echo ${DEVICE} | grep -q -P "^/dev/(nvme|loop|mmcblk)"
if [ $? -eq 0 ]; then
    INSTALLDEVICE="${DEVICE}p"
fi

log_progress 1 "Creating partitions..."

if [ "${USE_UNALLOCATED}" = true ]; then

    # Safely unmount all partitions on the target device
    run_command "umount $part 2>/dev/null" 2 "Unmounting all partitions on ${DEVICE}..."
    for part in $(lsblk -o NAME,PATH -ln | grep "^$(basename ${DEVICE})" | grep -v "^$(basename ${DEVICE})$" | awk '{print $2}'); do
        run_command "umount $part 2>/dev/null" 3 "Unmounting $part..."
        sleep 1
        # Try force unmount if regular unmount fails
        if mountpoint -q $part 2>/dev/null; then
            run_command "umount -f $part 2>/dev/null" 4 "Force unmounting $part..."
            sleep 3
            # If still mounted, try lazy unmount as last resort
            if mountpoint -q $part 2>/dev/null; then
                run_command "umount -l $part 2>/dev/null" 5 "Lazy unmounting $part..."
                sleep 5
                # If still mounted, print an error message
                if mountpoint -q $part 2>/dev/null; then
                    echo "Failed to unmount $part. Please unmount it manually and try again."
                    exit 1
                fi
            fi
        fi
    done

    # Clean up any existing SteamFork partitions to avoid conflicts
    # SteamFork cannot be installed multiple times on the same disk
    run_command "sgdisk ${DEVICE} --delete=${PART_NUM}" 6 "Checking for existing SteamFork partitions..."
    for part in $(lsblk -o NAME,LABEL,PARTLABEL -ln | grep sf_ | awk '{print $1}'); do
        # Get the partition number to delete
        if [[ $part =~ ([0-9]+)$ ]]; then
            PART_NUM=${BASH_REMATCH[1]}
            run_command "sgdisk ${DEVICE} --delete=${PART_NUM}" 7 "Deleting partition $PART_NUM from ${DEVICE}..."
        fi
    done

    # Find the start of the largest free space and align to 1MB
    aligned_start=$(parted -s ${DEVICE} unit MB print free | 
        grep "Free Space" | sort -nk4 | tail -1 | awk '{print $1}' | tr -d 'MB' | 
        xargs -I{} echo "scale=0; ({} + 1) / 1 * 1" | bc)
    log_progress 8 "Found largest free space of ${aligned_start}"

    log_progress 9 "Creating partitions in unallocated space..."

    run_command "parted -s -a optimal ${DEVICE} unit MB mkpart sf_efi fat32 ${aligned_start} $((aligned_start + 256))" 10 "Creating EFI partition"
    run_command "parted -s -a optimal ${DEVICE} unit MB mkpart sf_root btrfs $((aligned_start + 256)) $((aligned_start + 256 + 20480))" 11 "Creating root partition"
    run_command "parted -s -a optimal ${DEVICE} unit MB mkpart sf_var ext4 $((aligned_start + 256 + 20480)) $((aligned_start + 256 + 20480 + 1024))" 12 "Creating var partition"
    run_command "parted -s -a optimal ${DEVICE} unit MB mkpart sf_home ext4 $((aligned_start + 256 + 20480 + 1024)) 100%" 13 "Creating home partition"

    EFI_PART_NUM=$(parted -s ${DEVICE} print | grep sf_efi | awk '{print $1}')
    run_command "parted -s ${DEVICE} set ${EFI_PART_NUM} boot on" 14 "Setting boot flag on EFI partition"
    run_command "parted -s ${DEVICE} set ${EFI_PART_NUM} esp on" 15 "Setting ESP flag on EFI partition"
    
    run_command "sync && partprobe ${DEVICE}" 16 "Syncing and probing device"

    efi_partition=$(lsblk -o NAME,LABEL,PARTLABEL -ln | grep sf_efi | awk '{print $1}')
    root_partition=$(lsblk -o NAME,LABEL,PARTLABEL -ln | grep sf_root | awk '{print $1}')
    var_partition=$(lsblk -o NAME,LABEL,PARTLABEL -ln | grep sf_var | awk '{print $1}')
    home_partition=$(lsblk -o NAME,LABEL,PARTLABEL -ln | grep sf_home | awk '{print $1}')

    log_progress 17 "Formatting partitions..."
    run_command "mkfs -t vfat /dev/${efi_partition}" 18 "Formatting EFI partition"
    run_command "fatlabel /dev/${efi_partition} sf_efi" 19 "Labeling EFI partition"
    run_command "mkfs -t btrfs -f /dev/${root_partition}" 20 "Formatting root partition"
    run_command "btrfs filesystem label /dev/${root_partition} sf_root" 21 "Labeling root partition"
    run_command "mkfs.ext4 -F /dev/${var_partition}" 22 "Formatting var partition"
    run_command "e2label /dev/${var_partition} sf_var" 23 "Labeling var partition"
    run_command "mkfs.ext4 -F /dev/${home_partition}" 24 "Formatting home partition"
    run_command "e2label /dev/${home_partition} sf_home" 25 "Labeling home partition"
else
    # Full disk installation
    run_command "sfdisk --delete ${DEVICE}" 26 "Deleting existing partitions"
    run_command "wipefs -a ${DEVICE}" 27 "Wiping filesystem signatures"
    run_command "yes | parted ${DEVICE} mklabel gpt" 28 "Creating GPT partition table"
    run_command "parted -a optimal ${DEVICE} mkpart primary fat32 2M 256M" 29 "Creating EFI partition"
    run_command "parted ${DEVICE} set 1 boot on" 30 "Setting boot flag on EFI partition"
    run_command "parted ${DEVICE} set 1 esp on" 31 "Setting ESP flag on EFI partition"
    run_command "parted -a optimal ${DEVICE} mkpart primary btrfs 256M 20G" 32 "Creating root partition"
    run_command "parted -a optimal ${DEVICE} mkpart primary ext4 20G 21G" 33 "Creating var partition"
    run_command "parted -a optimal ${DEVICE} mkpart primary ext4 21G 100%" 34 "Creating home partition"
    root_partition="${INSTALLDEVICE}2"
    var_partition="${INSTALLDEVICE}3"
    home_partition="${INSTALLDEVICE}4"
    run_command "mkfs -t vfat ${INSTALLDEVICE}1" 35 "Formatting EFI partition"
    run_command "fatlabel ${INSTALLDEVICE}1 sf_efi" 36 "Labeling EFI partition"
    run_command "mkfs -t btrfs -f ${root_partition}" 37 "Formatting root partition"
    run_command "btrfs filesystem label ${root_partition} sf_root" 38 "Labeling root partition"
    run_command "mkfs.ext4 -F ${var_partition}" 39 "Formatting var partition"
    run_command "e2label ${var_partition} sf_var" 40 "Labeling var partition"
    run_command "mkfs.ext4 -F ${home_partition}" 41 "Formatting home partition"
    run_command "e2label ${home_partition} sf_home" 42 "Labeling home partition"
fi

run_command "sync && partprobe ${DEVICE}" 43 "Syncing and probing device"
log_progress 50 "Starting to bootstrap installation..."
run_command "steamfork-bootstrap --username \"${OSUSER}\" --password \"${OSPASS}\" --root_password \"${ROOTPASS}\"" 50 "Bootstrapping installation"
sync